<!-- app/views/registers/_form.html.erb -->
<div class="form-container">
  <h1>Edit Registration</h1>
  <%= stylesheet_link_tag 'users', media: 'all' %>
  <%= form_with model: @register, local: true do |form| %>
    <div class="form-row">
      <div class="form-group">
        <%= form.label :fistName %>
        <%= form.text_field :fistName, class: 'form-input', require: true %>
      </div>

      <div class="form-group">
        <%= form.label :lastName %>
        <%= form.text_field :lastName, class: 'form-input',require: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :birthDay %>
        <%= form.date_field :birthDay, class: 'form-input' ,require: true %>
      </div>

      <div class="form-group">
        <%= form.label :gender, 'Male', class: 'form-label' %>
        <%= form.radio_button :gender, 'Male', class: 'form-radio',require: true  %>
        <%= form.label :gender, 'Female', class: 'form-label' %>
        <%= form.radio_button :gender, 'Female', class: 'form-radio' ,require: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-input',require: true  %>
      </div>

      <div class="form-group">
        <%= form.label :phoneNumber %>
        <%= form.telephone_field :phoneNumber, class: 'form-input',require: true  %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :subJect %>
      <%= form.select :subJect, ['Option 1', 'Option 2', 'Option 3'], prompt: 'Choose option', class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Update', class: 'submit-btn' %>
    </div>
  <% end %>
</div>
